{
  "include": ["**/*", "**/.server/**/*", "**/.client/**/*", ".react-router/types/**/*"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@styles/*": ["./app/styles/*"],
      "@components/*": ["./app/components/*"],
      "@routes/*": ["./app/routes/*"],
      "@utils/*": ["./app/utils/*"],
      "@assets/*": ["./app/assets/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@lib/*": ["./app/lib/*"],
      "@store/*": ["./app/store/*"],
      "@types/*": ["./app/types/*"],
      "@pages/*": ["./app/pages/*"],
      "@vite-env/*": ["./app/vite-env/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false
  }
}
